<h1>Welcome back.</h1>
<h5>to Opinioner!</h5>
<hr>
<h4>Login</h4>
<p>With your existing account name or create a new one <%= link_to 'here.', register_path, class: 'link-text link-light' %></p>

<%= form_with url: login_path do |form| %>

<div class="mb-3">
  <%= form.label 'User Name:', class: 'form-label' %>
  <%= form.text_field :username, class: 'form-control', placeholder: 'e.g., John' %>
</div>
<div class="d-flex align-items-center justify-content-between">
  <div><%= link_to 'Register', register_path, class: 'link-light' %> <br> for new account.</div>
  <div class="mt-3"> <%= form.submit 'Login!', class: 'btn btn-primary mb-3  px-4' %></div>
</div>
<% end %>