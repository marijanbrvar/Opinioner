<h4>Register</h4>
<p>for your new account.</p>

<%= form_with model: @user, url: register_path do |form| %>
  <%= form_messages(@user) %>
<div class="mb-3">
  <%= form.label 'User Name:', class: 'form-label' %>
  <%= form.text_field :username, class: 'form-control', placeholder: 'e.g.,John' %>
</div>
<div class="mb-3">
  <%= form.label 'Full Name:', class: 'form-label'  %>
  <%= form.text_field :full_name, class: 'form-control', placeholder: 'e.g.,John Doe'  %>
</div>

 <div class="d-flex align-items-center justify-content-between">
  <div>Back to <%= link_to 'Login', login_path, class: 'link-light' %> page.</div>
   <div class="mt-3"> <%= form.submit 'Sign Up!', class: 'btn btn-primary mb-3 px-4' %></div>
</div>
<% end %>