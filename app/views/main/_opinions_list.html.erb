<div class="card">
  <div class="card-body">
    <h6 class="fs-6 mb-2 fw-medium text-uppercase text-primary"><%= value.count %> New opinions</h6>
    <% value.each do |opinion|%>
      <div class=" d-flex">
        <div class="flex-shrink-0">
          <%= image_tag opinion.user.photo, class: 'rounded-3 small-avatar'  %>
        </div>
        <div class="flex-grow-1 ms-3">
          <div class="d-flex justify-content-between mb-2">
            <div class="fw-bold"><%= link_to opinion.user.full_name, profile_path(opinion.user), class: 'text-decoration-none'  %></div>
            <div class="text-muted"><small><%= time_ago_in_words(opinion.created_at) %></small></div>
          </div>
          <p class="text-muted lh-1"><small><%= opinion.text %></small></p>
          <p class="text-muted fw-bold lh-1"><%= opinion.likes.count %> <%= like_link(opinion.id) %></p>
          <hr>
        </div>
      </div>
    <% end %>
  </div>
</div>